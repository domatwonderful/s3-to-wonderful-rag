STORAGE_PROVIDER=s3

# S3 configuration
AWS_REGION=us-east-1
S3_BUCKET=your-s3-bucket
S3_PREFIX=
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# GCS configuration (set STORAGE_PROVIDER=gcs)
GCS_BUCKET=your-gcs-bucket
GCS_PREFIX=
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Azure configuration (set STORAGE_PROVIDER=azure)
AZURE_STORAGE_ACCOUNT=your-storage-account
AZURE_STORAGE_KEY=your-storage-key
AZURE_STORAGE_CONTAINER=your-container
AZURE_STORAGE_PREFIX=
AZURE_STORAGE_CONNECTION_STRING=your-connection-string

# Wonderful API configuration
WONDERFUL_TENANT=swiss-german
WONDERFUL_ENV=sb
WONDERFUL_RAG_ID=your-rag-id
WONDERFUL_API_KEY=your-api-key

# Internal API security (optional, recommended for production)
# Set this to secure /api/v1/sync, /api/v1/stats, and /api/v1/processed-files endpoints
# Leave empty to disable authentication (not recommended)
INTERNAL_API_KEY=your-internal-api-key

# Sync controls
SYNC_INTERVAL_SECONDS=1800
MAX_FILE_SIZE_MB=0
PORT=8080
