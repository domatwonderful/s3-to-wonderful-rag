apiVersion: v1
kind: Secret
metadata:
  name: wonderful-rag-secrets
  namespace: wonderful-rag
type: Opaque
stringData:
  # AWS credentials (optional if using IAM roles)
  aws_access_key_id: "your-aws-access-key-id"
  aws_secret_access_key: "your-aws-secret-access-key"

  # Azure credentials (optional if using managed identity)
  azure_storage_key: "your-azure-storage-key"
  azure_storage_connection_string: "your-azure-connection-string"
  
  # Wonderful API credentials
  wonderful_rag_id: "your-rag-id"
  wonderful_api_key: "your-api-key"
